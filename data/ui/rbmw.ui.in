<?xml version="1.0" encoding="UTF-8"?>
<interface domain="@GETTEXT_PACKAGE@">
  <requires lib="gtk+" version="3.12"/>
  <object class="GtkListStore" id="romsListStore">
    <columns>
      <!-- column-name name -->
      <column type="guchar"/>
      <!-- column-name fileloc -->
      <column type="gchar"/>
      <!-- column-name tooltip -->
      <column type="gchar"/>
    </columns>
  </object>
  <template class="RomBrowserAppWindow" parent="GtkApplicationWindow">
    <property name="title" translatable="yes">ROM Browser</property>
    <property name="icon_name">applications-games</property>
    <property name="default-height">500</property>
    <property name="default-width">600</property>
    <child type="titlebar">
      <object class="GtkHeaderBar" id="header">
        <property name="title">Browsing ROMs</property>
        <property name="show_close_button">True</property>
        <property name="sensitive">True</property>
        <child>
          <object class="GtkMenuButton" id="gears">
            <property name="visible">True</property>
            <style>
              <class name="image-button"/>
            </style>
            <child>
              <object class="GtkImage" id="gears-icon">
                <property name="visible">True</property>
                <property name="icon-name">emblem-system-symbolic</property>
                <property name="icon-size">1</property>
              </object>
            </child>
          </object>
          <packing>
            <property name="pack-type">end</property>
          </packing>
        </child>
        <child>
          <object class="GtkToggleButton" id="search">
            <property name="visible">True</property>
            <style>
              <class name="image-button"/>
            </style>
            <child>
              <object class="GtkImage" id="search-icon">
                <property name="visible">True</property>
                <property name="icon-name">edit-find-symbolic</property>
                <property name="icon-size">1</property>
              </object>
            </child>
          </object>
          <packing>
            <property name="pack-type">end</property>
          </packing>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkSearchBar" id="searchbar">
            <property name="visible">True</property>
            <child>
              <object class="GtkSearchEntry" id="searchentry">
                <signal name="search-changed" handler="search_text_changed"/>
                <property name="visible">True</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkHeaderBar" id="header-filter">
            <child>
              <object class="GtkComboBoxText" id="cb-filter-type">
                <items>
                  <item translatable="yes" id="snes">SNES</item>
                  <item translatable="yes" id="gbac">GBA/GBC</item>
                  <item translatable="yes" id="psx">Playstation 1</item>
                  <item translatable="yes" id="ps2">Playstation 2</item>
                </items>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkTreeView" id="romsTreeView">
            <property name="model">romsListStore</property>
            <property name="search_column">1</property>
            <property name="tooltip_column">3</property>
            <child>
              <object class="GtkTreeViewColumn" id="column-name">
                <property name="title" translatable="yes">Name</property>
                <child>
                  <object class="GtkCellRendererText" id="col-name-render"></object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkTreeViewColumn" id="column-fileloc">
                <property name="title" translatable="yes">File</property>
                <child>
                  <object class="GtkCellRendererText" id="col-fileloc-render"></object>
                </child>
              </object>
            </child>
            <child internal-child="selection">
              <object class="GtkTreeSelection" id="romsTreeView-selection" />
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
